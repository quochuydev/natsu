{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "extends": [
    "plugin:prettier/recommended",
    "plugin:jest/recommended"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "no-console": "off",
        "jest/no-mocks-import": "off",
        "jest/no-disabled-tests": "off",
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "example-client",
                "onlyDependOnLibsWithTags": ["natsu-port", "natsu-type", "example-type"]
              },
              {
                "sourceTag": "example-server",
                "onlyDependOnLibsWithTags": ["natsu-port-server", "natsu-type"]
              },
              {
                "sourceTag": "example-natsu",
                "onlyDependOnLibsWithTags": ["natsu", "natsu-type", "example-type"]
              },
              {
                "sourceTag": "natsu",
                "onlyDependOnLibsWithTags": ["natsu-type"]
              },
              {
                "sourceTag": "natsu-port",
                "onlyDependOnLibsWithTags": ["natsu-type"]
              },
              {
                "sourceTag": "natsu-port-server",
                "onlyDependOnLibsWithTags": ["natsu-type"]
              },
              {
                "sourceTag": "natsu-type",
                "onlyDependOnLibsWithTags": []
              },
              {
                "sourceTag": "example-type",
                "onlyDependOnLibsWithTags": ["natsu-type"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {
        "@typescript-eslint/interface-name-prefix": "off",
        "@typescript-eslint/no-empty-interface": "off",
        "@typescript-eslint/no-object-literal-type-assertion": "off",
        "@typescript-eslint/array-type": ["error", { "default": "array-simple" }],
        "@typescript-eslint/no-use-before-define": [
          "error",
          { "functions": false, "classes": true, "variables": true, "typedefs": true }
        ],
        "@typescript-eslint/consistent-type-imports": ["error", { "prefer": "type-imports" }]
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
